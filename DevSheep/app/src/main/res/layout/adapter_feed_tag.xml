<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:gravity="center"
    android:background="@drawable/background_item_feed"
    android:clipToPadding="false"
    android:focusable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/feed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|left"
                    android:layout_marginTop="4dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center|left"
                        android:src="@drawable/ic_launcher_background"
                        android:transitionName="@string/profile_img">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_m_nick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="8dp"
                            android:gravity="center|left"
                            android:maxLines="1"
                            android:text="null"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:transitionName="@string/profile_name"
                            app:fontFamily="@font/apple_sd_gothic_neo_l" />

                        <TextView
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/shape"
                            />
                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="남"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:text="/"
                            />
                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="20대"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            />


                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_feed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center|left"
                    android:textSize="11sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="6dp"
                    app:fontFamily="@font/apple_sd_gothic_neo_l"
                    android:textColor="@color/gray"
                    android:text="시간 전" />


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/apple_sd_gothic_neo_l"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/title_color"
                    android:textSize="14sp"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:fontFamily="@font/apple_sd_gothic_neo_l"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/main_Accent3"
                    android:textSize="12sp"
                    tools:text="#Title" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:fontFamily="@font/apple_sd_gothic_neo_l"
                    android:maxLines="2"
                    android:textColor="@color/title_color"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    tools:text="Title" />
            </LinearLayout>


        </RelativeLayout>

        <FrameLayout
            android:id="@+id/layout_iv_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/recycler_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_feed_tag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="14dp"
        android:gravity="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="조회수 "
                android:fontFamily="@font/apple_sd_gothic_neo_l"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:background="@android:color/transparent">

            </TextView>

            <TextView
                android:id="@+id/view_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/apple_sd_gothic_neo_l"
                android:text="1"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/apple_sd_gothic_neo_l"
                android:text="댓글 "/>

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/apple_sd_gothic_neo_l"
                android:gravity="left"
                android:text="1"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/favorite_btn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="left"
                android:background="@drawable/background_like_count"
                android:button="@null"
                app:layout_constraintStart_toEndOf="@+id/chefActionMessage"
                app:layout_constraintTop_toBottomOf="@+id/chefDivider" />

            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/apple_sd_gothic_neo_l"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/bookmark"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_bookmark"
                android:button="@null"
                android:src="@drawable/ic_bookmark_hollow">

            </CheckBox>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/main_lightGray"
        />
</LinearLayout>