<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:cardElevation="32dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_rank_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ImageView>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@drawable/background_gradient_rank"
            />



    </FrameLayout>


    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:alpha="0.6"
        android:gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:alpha="0.8"
            android:background="@drawable/ic_eye"
            tools:ignore="MissingConstraints">
        </ImageView>

        <TextView
            android:id="@+id/tv_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:textSize="11sp"
            android:text="1"
            tools:text="1" />

        <View
            android:layout_width="1dp"
            android:layout_marginLeft="16dp"
            android:layout_height="16dp"
            android:background="@color/deep_white"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.8"
            android:background="@drawable/ic_chat_empty"
            tools:ignore="MissingConstraints">
        </ImageView>


        <TextView
            android:id="@+id/tv_chat_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:textSize="11sp"
            android:text="1"
            tools:text="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:alpha="0.6"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ridi_batang"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:textStyle="bold"
            android:textSize="13sp"
            tools:text="오늘의 사연" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_rank_tag_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:alpha="0.6"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/ic_crown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        tools:ignore="MissingConstraints">

    </ImageView>


    <TextView
        android:id="@+id/tv_rank_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/roundwindextra_bold"
        android:textSize="18sp"
        android:layout_margin="42dp"
        android:text="ㅇㄱㄹㅇ 이다 "
        >
    </TextView>





</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>