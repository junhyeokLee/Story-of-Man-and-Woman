<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:transitionName="@string/profile_img"
            ></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_profile_nick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/apple_sd_gothic_neo_b"
                android:gravity="center|left"
                android:text="julia"
                android:textColor="@color/black"
                android:transitionName="@string/profile_name"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/apple_sd_gothic_neo_t"
                        android:gravity="center"
                        android:text="남"
                        android:textColor="@color/blue_gray_light"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:text="/"
                        android:textColor="@color/blue_gray_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/apple_sd_gothic_neo_t"
                        android:gravity="center"
                        android:text="20대"
                        android:textColor="@color/blue_gray_light"
                        android:textSize="13sp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/check_follow"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/background_follow_rounded"
            android:button="@null"
            android:fontFamily="@font/apple_sd_gothic_neo_t"
            android:gravity="center"
            android:orientation="vertical"
            android:text="구독하기"
            android:textColor="@color/black"
            android:textSize="11sp"></CheckBox>

    </LinearLayout>

</LinearLayout>