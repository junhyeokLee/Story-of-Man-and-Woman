<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/my_story_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/write_background"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <View
            android:layout_width="32dp"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/main_Accent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            app:fontFamily="@font/circularstd_book">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="6">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_write_empty"
                    android:tint="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text=" 나의 이야기 "
                    android:textColor="@color/main_Accent"
                    android:textSize="14sp"
                    android:fontFamily="@font/roundwindregular"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="- 전체공개"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/ridi_batang" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_follow_story_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/write2_background"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <View
            android:layout_width="32dp"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/main_Accent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            app:fontFamily="@font/circularstd_book">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="6">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_heart_empty"
                    android:tint="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="구독하는 사람들에게"
                    android:textColor="@color/main_Accent"
                    android:textSize="14sp"
                    android:fontFamily="@font/roundwindregular"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="- 구독자 공개 "
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/ridi_batang" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/private_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/write2_background"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <View
            android:layout_width="32dp"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/main_Accent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            app:fontFamily="@font/circularstd_book"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_margin="12dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_lock_empty"
                    android:tint="@color/gray"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="비밀 이야기"
                    android:textColor="@color/main_Accent"
                    android:textSize="14sp"
                    android:fontFamily="@font/roundwindregular"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp"
                    android:text="- 비공개"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:fontFamily="@font/ridi_batang" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
