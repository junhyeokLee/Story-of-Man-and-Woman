<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@drawable/background_item_feed"
    android:clipToPadding="false"
    android:focusable="true"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        >

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:gravity="center|right"
            >

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center|left"
                android:src="@drawable/ic_launcher_background"
                android:transitionName="@string/profile_img"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_m_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center|left"
                    android:layout_marginLeft="8dp"
                    android:maxLines="1"
                    android:text="null"
                    android:textColor="@color/black"
                    android:transitionName="@string/profile_name"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins" />


                <TextView
                    android:id="@+id/tv_feed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center|left"
                    android:layout_marginLeft="8dp"
                    android:textSize="11sp"
                    app:fontFamily="@font/poppins"
                    android:textColor="@color/dark_gray"
                    android:text="시간 전" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:layout_alignParentEnd="true"
            android:gravity="center|right"
            >
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:src="@drawable/ic_menu"
                >


            </ImageButton>



        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/feed_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/white"
        android:clickable="true"
        android:clipToPadding="false"
        android:focusable="true"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="@font/roundwindregular"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:autoLink="web|email"
                android:gravity="left"
                android:lineSpacingExtra="4sp"
                android:maxLines="3"
                android:text="null"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:fontFamily="@font/ridi_batang"></TextView>

            <ImageView
                android:id="@+id/content_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"></ImageView>

        </LinearLayout>



        <TextView
            android:id="@+id/tag_id"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:alpha="0.5"
            android:singleLine="true"
            android:gravity="center|right"
            android:layout_marginRight="16dp"
            android:textColor="@color/gray2"
            android:text="#001"
            android:textSize="13sp"
            android:fontFamily="@font/ridi_batang"
            tools:text="# 사연남녀" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_margin="6dp"
                android:background="@drawable/background_item_pokemon_span"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="남"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:alpha="0.5"
                app:fontFamily="@font/ridi_batang" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_margin="6dp"
                android:background="@drawable/background_item_pokemon_span"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="30 대"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:alpha="0.5"
                app:fontFamily="@font/ridi_batang" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/background_feed_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:tint="@color/sub_Accent"
                    android:src="@drawable/ic_eye">

                </ImageView>
                <TextView
                    android:id="@+id/view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textColor="@color/sub_Accent"
                    android:text="1"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp" />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/sub_Accent"
                >
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:tint="@color/sub_Accent"
                    android:src="@drawable/ic_chat">

                </ImageView>

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textColor="@color/sub_Accent"
                    android:text="1"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp" />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/sub_Accent"
                >
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/favorite_btn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:background="@drawable/background_like_count"
                    app:layout_constraintStart_toEndOf="@+id/chefActionMessage"
                    app:layout_constraintTop_toBottomOf="@+id/chefDivider" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textColor="@color/sub_Accent"
                    android:layout_marginLeft="12dp"
                    android:text="0"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/sub_Accent"
                >
            </View>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/bookmark"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:background="@drawable/background_bookmark"
                    android:src="@drawable/ic_bookmark_hollow">

                </CheckBox>


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>



</LinearLayout>