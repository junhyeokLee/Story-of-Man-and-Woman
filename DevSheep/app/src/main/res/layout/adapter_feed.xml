        <!--                android:textSize="12sp"-->
        <!--                android:alpha="0.5"-->
        <!--                app:fontFamily="@font/ridi_batang" />-->

        <!--        </LinearLayout>-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@drawable/background_feed_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:tint="@color/sub_Accent"
                    android:src="@drawable/ic_eye">

                </ImageView>
                <TextView
                    android:id="@+id/view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textColor="@color/sub_Accent"
                    android:text="1"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:tint="@color/sub_Accent"
                    android:src="@drawable/ic_chat">

                </ImageView>

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textColor="@color/sub_Accent"
                    android:text="1"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/favorite_btn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:background="@drawable/background_like_count"
                    app:layout_constraintStart_toEndOf="@+id/chefActionMessage"
                    app:layout_constraintTop_toBottomOf="@+id/chefDivider" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:textColor="@color/sub_Accent"
                    android:layout_marginLeft="12dp"
                    android:text="0"
                    android:textSize="14sp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/bookmark"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:background="@drawable/background_bookmark"
                    android:src="@drawable/ic_bookmark_hollow">

                </CheckBox>


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>



</LinearLayout>