<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_noti"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <com.dev_sheep.story_of_man_and_woman.utils.RedDotImageView2
            android:id="@+id/img_profile_dot"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|left"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|left"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                >
            <TextView
                android:id="@+id/noti_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글알림"
                android:textColor="@color/gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:layout_weight="1"
                />

                <TextView
                    android:id="@+id/tv_noti_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/roboto_regular"
                    android:text="2017/02/11"
                    android:layout_weight="0.1"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메시지"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    >
                </TextView>

            <TextView
                android:id="@+id/noti_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메시지"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="6dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                >
            </TextView>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/main_gray"
        tools:ignore="MissingConstraints"></View>

</LinearLayout>