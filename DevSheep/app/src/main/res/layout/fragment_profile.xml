<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:contentScrim="?attr/colorPrimary"
            android:layout_gravity="center"
            app:expandedTitleGravity="center"
            app:expandedTitleMarginTop="160dp"
            app:expandedTitleTextAppearance="@style/ExpandedAppBar"
            app:collapsedTitleTextAppearance="@style/CollapsingTitleStyle"
            app:statusBarScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">



            <ImageView
                android:id="@+id/id_ProfileBackground_Image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />
            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:fitsSystemWindows="true"
                android:background="@drawable/background_gradient_img"
                />


            <ImageView
                android:id="@+id/id_ProfileBackgorund_add"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center|right"
                android:src="@drawable/ic_add"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="46dp"
                />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/id_Profile_Image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user"
                app:civ_border_color="@color/gray"
                app:civ_border_width="0.5dp"
                app:civ_shadow="true"
                app:layout_anchor="@id/app_bar"
                app:civ_shadow_color="#f4f5f9"
                app:layout_anchorGravity="center"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.1"
                app:civ_shadow_radius="10" />
            <LinearLayout
                android:id="@+id/id_Profile_layout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_add"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="42dp">
                <ImageView
                    android:id="@+id/id_Profile_add"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_add"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profile_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="junhyeoklee616"
                    android:fontFamily="@font/roundwindregular"
                    android:textColor="@color/black"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_edit_rounded"
                    android:fontFamily="@font/ridi_batang"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="편 집"
                    android:textColor="@color/color_third_text"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ridi_batang"
                            android:textColor="@color/gray"
                            android:text="구독중" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:fontFamily="@font/ridi_batang"
                            android:textColor="@color/black"
                            android:text="0" />

                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="42dp"
                        android:background="@color/deep_white"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ridi_batang"
                            android:textColor="@color/gray"
                            android:text="구독자" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"
                            android:text="0" />
                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="42dp"
                        android:background="@color/deep_white">

                    </View>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ridi_batang"
                            android:textColor="@color/gray"
                            android:text="쪽지함" />

                        <ImageView
                            android:id="@+id/preferecnes_message"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_message_hollow"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_height="42dp"
                        android:background="@color/deep_white">

                    </View>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ridi_batang"
                            android:textColor="@color/gray"
                            android:text="설정" />

                        <ImageView
                            android:id="@+id/preferecnes_img"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_settings"
                            android:backgroundTint="@color/sub_Accent"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lightGrey"
            ></View>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabTextAppearance="@style/tab_text"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/main_Accent"
            app:tabTextColor="@color/sub_Accent"
            app:tabIconTint="@color/sub_Accent"
            app:tabSelectedTextColor="@color/sub_Accent"
            >

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

    </androidx.viewpager.widget.ViewPager>



    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>