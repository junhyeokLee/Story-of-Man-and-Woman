<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/write_coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin">


            <ImageButton
                android:id="@+id/im_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ef_ic_arrow_back"
                android:backgroundTint="@color/black" />


            <CheckBox
                android:id="@+id/check_follow"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:background="@drawable/background_follow_rounded"
                android:button="@null"
                android:fontFamily="@font/ridi_batang"
                android:gravity="center"
                android:orientation="vertical"
                android:text="구독하기"
                android:textColor="@color/black"
                android:textSize="12sp"></CheckBox>

            <CheckBox
                android:id="@+id/check_edit"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:background="@drawable/background_feed_edit_btn"
                android:button="@null"
                android:fontFamily="@font/ridi_batang"
                android:gravity="center"
                android:orientation="vertical"
                android:text="수정하기"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="12sp"></CheckBox>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:id="@+id/progressbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <eu.micer.circlesloadingindicator.CirclesLoadingIndicator
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="visible"
                app:circlesColor="@color/sub_Accent"
                app:circlesCount="8"
                app:circlesRadius="4dp"
                app:rotationDuration="3000"
                app:showLeadingLine="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            android:orientation="vertical"
            >

            <!-- layout_behavior : 자식뷰의 변화 상태를 부모뷰/다른 자식뷰한테 전달 (여기서는 스크롤했을 경우 다른 자식뷰에게 전달한다) -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:paddingStart="16dp"
                        android:layout_marginTop="16dp"
                        android:paddingEnd="8dp"
                        android:layout_marginBottom="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|right"
                            android:orientation="horizontal"
                            android:layout_alignParentStart="true"
                            android:gravity="center|right"
                            >


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_profile"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="center|left"
                                android:src="@drawable/ic_launcher_background"
                                app:civ_border_color="@android:color/transparent"
                                app:civ_border_width="1dp">

                            </de.hdodenhof.circleimageview.CircleImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:id="@+id/tv_creater"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginLeft="8dp"
                                    android:gravity="center|left"
                                    android:maxLines="1"
                                    android:text="null"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/poppins" />


                                <TextView
                                    android:id="@+id/tv_feed_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:gravity="center|left"
                                    android:layout_marginLeft="8dp"
                                    android:textSize="11sp"
                                    app:fontFamily="@font/poppins"
                                    android:textColor="@color/dark_gray"
                                    android:text="시간 전" />


                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/write_headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ridi_batang"
                        android:gravity="left"
                        android:paddingTop="6dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="6dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="6dp"
                        android:text="null"
                        android:textColor="@color/black"
                        android:textSize="24sp" />


                    <com.lumyjuwon.richwysiwygeditor.RichEditor.RichEditor
                        android:id="@+id/write_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:autoLink="web|email"
                        android:fillViewport="true"
                        android:focusable="true"
                        android:gravity="start"
                        android:textCursorDrawable="@drawable/edit_cursor"
                        android:visibility="visible"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_tag_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/ridi_batang"
                            android:paddingStart="16dp"
                            android:paddingEnd="8dp"
                            android:text="# Tag"
                            android:textColor="@color/gray2"
                            android:textSize="13sp"></TextView>

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="?attr/actionBarSize"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:background="@color/sub_Accent">
                            </View>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layout_comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="댓글"
                                    android:textColor="@color/gray2"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:id="@+id/tv_comment_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="1개"
                                    android:textColor="@color/gray2"
                                    android:textSize="12sp"></TextView>

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview_comments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                >

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="?attr/actionBarTheme"
                android:background="@drawable/top_border_white"
                app:layout_collapseMode="pin">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/ic_camera"
                    android:backgroundTint="@color/gray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_border_comment"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:hint="어떻게 생각하세요?"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@drawable/comment_cursor"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:layout_marginLeft="12dp"
                        />

                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>





        <androidx.appcompat.widget.Toolbar
            android:id="@+id/write_bottom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/top_border_white"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:layout_collapseMode="pin"
            app:titleMarginStart="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_eye"
                        android:tint="@color/sub_Accent">

                    </ImageView>

                    <TextView
                        android:id="@+id/view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/sub_Accent"
                        android:textSize="14sp" />

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/layout_bottom_comments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_chat"
                        android:tint="@color/sub_Accent">

                    </ImageView>

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/sub_Accent"
                        android:textSize="14sp" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/favorite_btn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:button="@null"
                        android:checked="false"
                        android:background="@drawable/background_like_count"
                        app:layout_constraintStart_toEndOf="@+id/chefActionMessage"
                        app:layout_constraintTop_toBottomOf="@+id/chefDivider" />


                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/sub_Accent"
                        android:textSize="14sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/bookmark"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:button="@null"
                        android:background="@drawable/background_bookmark"
                        android:src="@drawable/ic_bookmark_hollow">

                    </CheckBox>


                </LinearLayout>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>