<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/write_coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/modify_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_scrollFlags="scroll|enterAlways">


            <ImageButton
                android:id="@+id/im_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@drawable/ef_ic_arrow_back"
                android:backgroundTint="@color/black" />


            <CheckBox
                android:id="@+id/check_follow"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"
                android:background="@drawable/background_follow_rounded"
                android:button="@null"
                android:fontFamily="@font/ridi_batang"
                android:gravity="center"
                android:orientation="vertical"
                android:text="구독하기"
                android:textColor="@color/black"
                android:textSize="12sp"></CheckBox>




        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"

        >
        <!-- layout_behavior : 자식뷰의 변화 상태를 부모뷰/다른 자식뷰한테 전달 (여기서는 스크롤했을 경우 다른 자식뷰에게 전달한다) -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/write_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ridi_batang"
                    android:gravity="left"
                    android:paddingTop="6dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="6dp"
                    android:layout_margin="16dp"
                    android:text="제목"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="16dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|right"
                        android:orientation="horizontal"
                        android:layout_alignParentStart="true"
                        android:gravity="center|right"
                        >


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center|left"
                            android:src="@drawable/ic_launcher_background"
                            app:civ_border_color="@android:color/transparent"
                            app:civ_border_width="1dp">

                        </de.hdodenhof.circleimageview.CircleImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/tv_creater"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:gravity="center|left"
                                android:layout_marginLeft="8dp"
                                android:maxLines="1"
                                android:text="닉네임닉네임닉네임닉네임닉네임닉네임"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:fontFamily="@font/poppins" />


                            <TextView
                                android:id="@+id/tv_feed_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:gravity="center|left"
                                android:layout_marginLeft="8dp"
                                android:textSize="11sp"
                                app:fontFamily="@font/poppins"
                                android:textColor="@color/dark_gray"
                                android:text="시간 전" />


                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>



                <com.lumyjuwon.richwysiwygeditor.RichEditor.RichEditor
                    android:id="@+id/write_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:autoLink="web|email"
                    android:fillViewport="true"
                    android:focusable="true"
                    android:gravity="start"
                    android:isScrollContainer="false"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:visibility="visible"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_tag_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ridi_batang"
                        android:paddingStart="16dp"
                        android:paddingEnd="8dp"
                        android:text="# Tag"
                        android:textColor="@color/gray2"
                        android:textSize="13sp"></TextView>

                </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center|bottom"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_gravity="center"
                                android:background="@color/sub_Accent">
                            </View>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:background="@color/sub_Accent">
                            </View>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/tv_m_nick"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:gravity="center"
                                android:layout_marginTop="4dp"

                                android:maxLines="1"
                                android:text="test"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/ridi_batang" />




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="댓글"
                                    android:textColor="@color/gray2"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:id="@+id/tv_comment_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:fontFamily="@font/poppins"
                                    android:text="1개"
                                    android:textColor="@color/gray2"
                                    android:textSize="12sp"></TextView>

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview_comments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                >

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/write_bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/top_border_white"
        android:minHeight="?attr/actionBarSize"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:layout_collapseMode="pin"
        app:titleMarginStart="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_eye"
                    android:tint="@color/sub_Accent">

                </ImageView>

                <TextView
                    android:id="@+id/view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/sub_Accent"
                    android:textSize="14sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_chat"
                    android:tint="@color/sub_Accent">

                </ImageView>

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/sub_Accent"
                    android:textSize="14sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favorite_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintStart_toEndOf="@+id/chefActionMessage"
                    app:layout_constraintTop_toBottomOf="@+id/chefDivider"
                    app:srcCompat="@drawable/ic_favorite_hollow" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/sub_Accent"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_bookmark_hollow"
                    android:tint="@color/sub_Accent">

                </ImageView>


            </LinearLayout>


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


</androidx.coordinatorlayout.widget.CoordinatorLayout>