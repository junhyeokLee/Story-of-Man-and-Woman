<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    android:background="@drawable/background_item_feed"
    android:clipToPadding="false"
    android:focusable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="@color/main_Accent"
            android:textSize="18sp"
            android:fontFamily="@font/apple_sd_gothic_neo_b"/>

        <RelativeLayout
            android:id="@+id/feed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|left"
                    android:layout_marginTop="12dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center|left"
                        android:src="@drawable/ic_launcher_background"
                        android:transitionName="@string/profile_img">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_m_nick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="4dp"
                            android:gravity="center|left"
                            android:maxLines="1"
                            android:text="null"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:transitionName="@string/profile_name"
                            app:fontFamily="@font/apple_sd_gothic_neo_l" />

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/shape"
                            />
                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="남"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/gray"
                            android:textSize="11sp"
                            android:text="/"
                            />
                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="20대"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            />



                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/apple_sd_gothic_neo_l"
                    android:maxLines="1"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/title_color"
                    android:textSize="14sp"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:fontFamily="@font/apple_sd_gothic_neo_l"
                    android:paddingRight="12dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/main_Accent3"
                    android:textSize="12sp"
                    tools:text="tag" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/apple_sd_gothic_neo_l"
                    android:maxLines="2"
                    android:visibility="gone"
                    android:paddingRight="12dp"
                    android:textColor="@color/title_color"
                    android:textSize="12sp"
                    tools:text="Title" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="조회수 "
                            android:textColor="@color/gray"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            android:textSize="12sp"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            android:gravity="left"
                            android:text="1"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            android:text="댓글 "
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            android:gravity="left"
                            android:text="1"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/favorite_btn"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="left"
                            android:background="@drawable/background_like_count"
                            android:button="@null"
                            app:layout_constraintStart_toEndOf="@+id/chefActionMessage"
                            app:layout_constraintTop_toBottomOf="@+id/chefDivider" />

                        <TextView
                            android:id="@+id/like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:fontFamily="@font/apple_sd_gothic_neo_l"
                            android:gravity="left"
                            android:text="0"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />


                        <CheckBox
                            android:id="@+id/bookmark"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:background="@drawable/background_bookmark"
                            android:button="@null"
                            android:src="@drawable/ic_bookmark_hollow">

                        </CheckBox>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="14dp"
        android:background="@color/main_lightGray"
        />

</LinearLayout>